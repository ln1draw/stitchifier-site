<p id="notice"><%= notice %></p>

<h1>User Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stitch pic</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_images.each do |user_image| %>
      <tr>
        <td><%= user_image.name %></td>
        <td><%= user_image.stitch_pic %></td>
        <td>
          <% if user_image.stitch_pic.url %>
            <%= image_tag user_image.stitch_pic.thumb.url %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user_image %></td>
        <td><%= link_to 'Edit', edit_user_image_path(user_image) %></td>
        <td><%= link_to 'Destroy', user_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Image', new_user_image_path %>
